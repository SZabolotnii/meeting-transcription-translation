# Meeting Transcription and Translation System Configuration
# Copy this file to .env and fill in your values

# Application Information
APP_NAME=Meeting Transcription System
APP_VERSION=1.0.0

# Google Cloud Translation API
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id_here

# Audio Configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024
AUDIO_BUFFER_DURATION=5.0

# Whisper Configuration
WHISPER_MODEL_SIZE=base
WHISPER_LANGUAGE=
WHISPER_DEVICE=auto

# Translation Configuration
TARGET_LANGUAGE=uk
TRANSLATION_CACHE_ENABLED=true
TRANSLATION_BATCH_SIZE=10

# UI Configuration
UI_PORT=7860
UI_HOST=127.0.0.1
UI_SHARE=false
UI_DEBUG=false
UI_REFRESH_INTERVAL=0.5

# Performance Configuration
MAX_CONCURRENT_TASKS=3
PROCESSING_TIMEOUT=30.0
AUDIO_QUEUE_SIZE=10
TRANSCRIPTION_QUEUE_SIZE=10
RESULT_QUEUE_SIZE=50
MAX_HISTORY_ENTRIES=1000
HISTORY_CLEANUP_THRESHOLD=500

# Storage Configuration
SESSION_HISTORY_PATH=data/sessions
CACHE_PATH=data/cache
LOGS_PATH=logs
TEMP_AUDIO_PATH=data/temp
EXPORT_PATH=data/exports

# Security Configuration
ENABLE_API_KEY_VALIDATION=true
MAX_SESSION_DURATION=14400
AUTO_CLEANUP_TEMP_FILES=true
LOG_SENSITIVE_DATA=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/transcription.log